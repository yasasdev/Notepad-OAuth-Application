<%- include('partials/header.ejs'); -%>

<div class="box-heading" id="heading">
  <h1>
    Notepad üìù‚úî <br> Today
  </h1>
  <p>
    <%= new Date().toDateString() %>
  </p>
</div>

<div class="box">
  <% for(let note of notes) { %>
    <div class="note">
      <form action="/delete" method="post">
        <input type="checkbox" onchange="this.form.submit()" name="deleteItemId" value="<%= note.id %>">
      </form>

      <p id="title<%= note.id %>">
        <%= note.notes %>
      </p>

      <form class="edit" action="/edit" method="post">
        <input type="hidden" name="noteId" value="<%= note.id %>">
        <input id="input<%= note.id %>" type="text" name="updatedNoteTitle" value="<%= note.note %>" autocomplete="off"
        autofocus="true" hidden="true" />
        <button id="done<%= note.id %>" class="edit" type="submit" hidden><img class="icon"
          src="/assets/icons/check-solid.svg" alt="tick image"></button>
      </form>
      <button id="edit<%= note.id %>" class="edit" onclick="handler('<%= note.id %>')"><img class="icon" 
        src="/assets/icons/pencil-solid.svg" alt="pencil image">
      </button>
    </div>
    <% } %>

    <form class="item" action="/add" method="post">
      <input type="text" name="newNote" placeholder="New Note" autocomplete="off" autofocus="true" />
      <button class="add" type="submit" name="list" value="add">+</button>
    </form>
</div>

<script>
  function handler(id) {
    document.getElementById("title" + id).setAttribute("hidden", true)
    document.getElementById("edit" + id).setAttribute("hidden", true)
    document.getElementById("done" + id).removeAttribute("hidden")
    document.getElementById("input" + id).removeAttribute("hidden")
  }
</script>

<%- include('partials/footer.ejs'); -%>