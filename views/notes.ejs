<%- include('partials/header') %>

<div class="container-notes">
    <div class="row">
        <div class="col-md-12">
            <form action="" method="post">
                <h1 class="note-heading">Notepad üìù‚úî</h1>
                <p class="date"> <%= new Date().toDateString() %> </p>
                <ul class="notes">
                    <% if(Array.isArray(notes) && notes.length > 0) { %>
                        <% notes.forEach((note) => { %>
                            <li class="note">
                                <%= note %>
                            </li>
                        <% }) %>
                    <% } else { %>
                        <p> <%= notes %> </p>
                    <% } %>
                </ul>
                <textarea name="note" class="form-control" placeholder="Write your note here..." rows="3" ></textarea>
                <button type="submit" class="btn btn-add">Add</button>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer') %>