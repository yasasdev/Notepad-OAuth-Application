<%- include('partials/header') %>
<div class="main-page">
    <div id="heading">
        <h1 class="note-heading">Notepad 📝✔</h1>
        <p class="date"> <%= new Date().toDateString() %> </p>
        </h1>
    </div>

    <div class="box">
        <form action="/delete" method="post">
            <input type="checkbox" onchange="this.form.submit()" name="deleteItemId" value="">
        </form>

        <form class="item" action="/add" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off" autofocus="true" />
            <button class="add" type="submit" name="list" value="s" >+</button>
        </form>
    </div>
</div>

<%- include('partials/footer') %>